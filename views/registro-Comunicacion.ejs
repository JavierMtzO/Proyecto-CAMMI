<%- include('includes/header.ejs') %>
   <%- include('includes/sidebar.ejs') %>

   <h3 class="text-dark mb-4">Registro de servicios de comunicación</h3>
   <div class="row mb-3">
       <div class="col-lg-8">
       
           <div class="row">
               <div class="col">
                   <div class="card shadow mb-3">
                       <div class="card-header py-3">
                           <p class="text-primary m-0 fw-bold">Registro de servicios de comunicación</p>
                       </div>
                       <div class="card-body">
                           <form>
                               <div class="row">
                                   <div class="col">
                                       <div class="mb-3">
                                           <label for="Nombre"><strong>Nombre del migrante</strong></label>
                                       
                                       
                                           <select id="Nombre" class="form-select" aria-label="Default select example" name="Nombre">
                                            <% for(let persona of personas) {%>
                                                <option value="<%= persona.Folio %>"><%= tipo_de_platillo.Nombre%></option>
                                               
                                            <% }%>
                                           </select>
                                       </div>
                                       
                                       
                                       <div class="mb-3">
                                           <label for="inputState"><strong>Inicio servicio</strong></label>
                                      
                                           <select id="tipo_de_apoyo" class="form-select" aria-label="Default select example" name="tipo_de_apoyo">
                                               <option value="NO"> NO </option>
                                               <option value="SI">SI</option>
                                           </select>
                                       </div>

                                       <div class="mb-3">
                                           <label for="inputState"><strong>Uso de wifi</strong></label>
                                      
                                           <select id="uso_wifi" class="form-select" aria-label="Default select example" name="uso_wifi">
                                               <option value="NO"> NO </option>
                                               <option value="SI">SI</option>
                                           </select>
                                       </div>

                                       <div class="mb-3">
                                           <label for="inputState"><strong>Completado de la llamada</strong></label>
                                      
                                           <select id="completado_llamada" class="form-select" aria-label="Default select example" name="completado_llamada">
                                               <option value="NO"> NO </option>
                                               <option value="SI">SI</option>
                                           </select>
                                       </div>
                                      

                                       
                                   </div>
                                   <div class="col">
                                       <div class="mb-3">
                                           <label class="form-label" for="Fecha"><strong>Fecha de registro</strong></label>
                                           <input type="text" class="form-control" id="fecha" placeholder="DD/MM/YYY" name="fecha">
                                       </div>


                                       <div class="mb-3">
                                           <label for="inputState"><strong>Carga de batería</strong></label>
                                      
                                           <select id="carga_bateria" class="form-select" aria-label="Default select example" name="carga_bateria">
                                               <option value="NO"> NO </option>
                                               <option value="SI">SI</option>
                                           </select>
                                       </div>


                                       <div class="mb-3">
                                           <label for="inputState"><strong>País destino de llamada</strong></label>
                                      
                                           <select id="pais_destino" class="form-select" aria-label="Default select example" name="pais_destino">
                                               <option value="ARGENTINA">ARGENTINA</option>
                                               <option value="BOLIVIA">BOLIVIA</option>
                                               <option value="BRASIL">BRASIL</option>
                                               <option value="CANADÁ">CANADÁ</option>
                                               <option value="CHILE">CHILE</option>
                                               <option value="COLOMBIA">COLOMBIA</option> 
                                               <option value="COSTA RICA">COSTA RICA</option> 
                                               <option value="CUBA">CUBA</option>
                                               <option value="ECUADOR">ECUADOR</option>
                                               <option value="EL SALVADOR">EL SALVADOR</option>
                                               <option value="GUATEMALA">GUATEMALA</option>
                                               <option value="HAITÍ">HAITÍ</option>
                                               <option value="HONDURAS">HONDURAS</option>
                                               <option value="MÉXICO">MÉXICO</option>
                                               <option value="NICARAGUA">NICARAGUA</option>
                                               <option value="PANAMÁ">PANAMÁ</option>
                                               <option value="PARAGUAY">PARAGUAY</option>
                                               <option value="PERÚ">PERÚ</option>
                                               <option value="REPÚBLICA DOMINICANA">REPÚBLICA DOMINICANA</option> 
                                               <option value="URUGUAY">URUGUAY</option>
                                               <option value="VENEZUELA">VENEZUELA</option>
                                               <option value="ESTADOS UNIDOS"> ESTADOS UNIDOS</option>
                                               <option value="APÁTRIDA">APÁTRIDA</option>
                                               <option value="OTROS">OTROS</option>

                                           </select>
                                       </div>

                                       <div class="mb-3">
                                           <label for="inputState"><strong>Mantenimiento del contacto familiar</strong></label>
                                      
                                           <select id="contacto_familiar" class="form-select" aria-label="Default select example" name="contacto_familiar">
                                               <option value="MCF"> MCF  </option>
                                               <option value="RCF">RCF</option>
                                           </select>
                                       </div>


                                   </div>
                                   <br>
                                   <br>
                                   <div class="row">
                                       <div class="mb-3">

                                       <a href="#" type="submit" class="btn btn-secondary">Cancelar</a>    
                                       <input type="submit" name="enviar"  class="btn btn-primary" value="Registrar"> 
                                       </div>     
                                   </div>


                               </div>


                            </form>
                       </div>
                   
                   
                   </div>
                   <div class="card shadow">
                   </div>
               </div>
           </div>
       </div>

   <%- include('includes/endsidebar.ejs') %>
 <%- include('includes/footer.ejs') %>