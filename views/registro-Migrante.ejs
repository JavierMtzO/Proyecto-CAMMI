<%- include('includes/header.ejs') %>
   <%- include('includes/sidebar.ejs') %>

        <h3 class="text-dark mb-4">Registro de nuevo migrante</h3>
        <div class="row mb-3">
            <div class="col-lg-8">
            
                <div class="row">
                    <div class="col">
                        <div class="card shadow mb-3">
                            <div class="card-header py-3">
                                <p class="text-primary m-0 fw-bold">Registro de nuevo migrante</p>
                            </div>
                            <div class="card-body">
                                <form>
                                    <div class="row">
                                        <div class="col">                                     

                                            <div class="mb-3">
                                                <label class="form-label" for="Nombre"><strong>Nombre del migrante</strong></label>
                                                <input type="text" class="form-control" id="nombre" placeholder="Nombre del migrante" name="nombre">
                                            </div>
                                            
                                            
                                            <div class="mb-3">
                                                <label for="inputState"><strong>Rango de Edad</strong></label>
                                           
                                                <select id="rango_edad" class="form-select" aria-label="Default select example" name="rango_edad">
                                                    <option value="NN: 0-11 años">NN: 0-11 años</option>
                                                    <option value="Adol: 12-17 años">Adol: 12-17 años</option>
                                                    <option value="Adul: 18-59 años">Adul: 18-59 años</option>
                                                    <option value="AM: mayor 60+ años">AM: mayor 60+ años</option>

                                                </select>
                                            </div>

                                            <div class="mb-3">
                                                <label for="nacionalidad"><strong>Nacionalidad</strong></label>
                                           
                                                <select id="nacionalidad" class="form-select" aria-label="Default select example" name="nacionalidad">
                                                    <option value="ARGENTINA">ARGENTINA</option>
                                                    <option value="BOLIVIA">BOLIVIA</option>
                                                    <option value="BRASIL">BRASIL</option>
                                                    <option value="CANADÁ">CANADÁ</option>
                                                    <option value="CHILE">CHILE</option>
                                                    <option value="COLOMBIA">COLOMBIA</option> 
                                                    <option value="COSTA RICA">COSTA RICA</option> 
                                                    <option value="CUBA">CUBA</option>
                                                    <option value="ECUADOR">ECUADOR</option>
                                                    <option value="EL SALVADOR">EL SALVADOR</option>
                                                    <option value="GUATEMALA">GUATEMALA</option>
                                                    <option value="HAITÍ">HAITÍ</option>
                                                    <option value="HONDURAS">HONDURAS</option>
                                                    <option value="MÉXICO">MÉXICO</option>
                                                    <option value="NICARAGUA">NICARAGUA</option>
                                                    <option value="PANAMÁ">PANAMÁ</option>
                                                    <option value="PARAGUAY">PARAGUAY</option>
                                                    <option value="PERÚ">PERÚ</option>
                                                    <option value="REPÚBLICA DOMINICANA">REPÚBLICA DOMINICANA</option> 
                                                    <option value="URUGUAY">URUGUAY</option>
                                                    <option value="VENEZUELA">VENEZUELA</option>
                                                    <option value="ESTADOS UNIDOS"> ESTADOS UNIDOS</option>
                                                    <option value="APÁTRIDA">APÁTRIDA</option>
                                                    <option value="OTROS">OTROS</option>

                                                </select>
                                            </div>

                                            <div class="mb-3">
                                                <label for="inputState"><strong>Discapacidad</strong></label>
                                           
                                                <select id="discapacidad" class="form-select" aria-label="Default select example" name="discapacidad">
                                                    <option value="NO">NO</option>
                                                    <option value="SI">SI</option>
                                                </select>
                                            </div>
                                           

                                            <div class="mb-3">
                                                <label for="dispositivo_propio"><strong>Dispositivo propio</strong></label>
                                           
                                                <select id="dispositivo_propio" class="form-select" aria-label="Default select example" name="dispositivo_propio">
                                                    <option value="NO">NO </option>
                                                    <option value="SI">SI</option>
                                                </select>
                                            </div>

                                            <div class="mb-3">
                                                <label for="div"><strong>Asesoria(DIV)</strong></label>
                                           
                                                <select id="div" class="form-select" aria-label="Default select example" name="div">
                                                    <option value="NO">NO </option>
                                                    <option value="SI">SI</option>
                                                </select>
                                            </div>

                                            

            
                                            
                                        </div>
                                        <div class="col">
                                            <div class="mb-3">
                                                <label class="form-label" for="Edad"><strong>Edad del migrante</strong></label>
                                                <input type="text" class="form-control" id="edad" placeholder="Edad del migrante" name="edad">
                                            </div>


                                            <div class="mb-3">
                                                <label for="genero"><strong>Género</strong></label>
                                           
                                                <select id="genero" class="form-select" aria-label="Default select example" name="genero">
                                                    <option value="MASCULINO">MASCULINO</option>
                                                    <option value="FEMENINO">FEMENINO</option>
                                                </select>
                                            </div>




                                            <div class="mb-3">
                                                <label for="inputState"><strong>Contacto del migrante</strong></label>
                                           
                                                <input type="text" class="form-control" id="contacto" placeholder="Contacto del migrante" name="contacto">

                                            </div>

                                            <div class="mb-3">
                                                <label for="lgbt"><strong>LGBT+</strong></label>
                                           
                                                <select id="lgbt" class="form-select" aria-label="Default select example" name="lgbt">
                                                    <option value="NO">NO </option>
                                                    <option value="SI">SI</option>
                                                </select>
                                            </div>

                                            <div class="mb-3">
                                                <label for="rfc"><strong>RFC del migrante</strong></label>
                                           
                                                <input type="text" class="form-control" id="rfc" placeholder="RFC del migrante" name="rfc">

                                            </div>

                                            

                                            <div class="mb-3">
                                                <label for="nss"><strong>Acompañado</strong></label>
                                           
                                                <select id="Acompanado" class="form-select" aria-label="Default select example" name="Acompanado">
                                                    <option value="NO">NO </option>
                                                    <option value="SI">SI</option>
                                                </select>
                                            </div>

                                            
                                           
                                        </div>
                                        <br>
                                        <br>
                                        <div class="row">
                                            <div class="mb-3">

                                            <a href="#" type="submit" class="btn btn-secondary">Cancelar</a>    
                                            <input type="submit" name="enviar"  class="btn btn-primary" value="Registrar"> 
                                            </div>     
                                        </div>


                                    </div>

    
                                 </form>
                            </div>
                        
                        
                        </div>
                        <div class="card shadow">
                        </div>
                    </div>
                </div>
            </div>

        <%- include('includes/endsidebar.ejs') %>
 <%- include('includes/footer.ejs') %>

